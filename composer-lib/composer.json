{
    "name": "ksfraser/frontaccounting-gencat",
    "description": "FrontAccounting Generate Catalogue Extension Library",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "KS Fraser",
            "email": "kevin@ksfraser.com"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/ksfraser/frontaccounting-common"
        },
        {
            "type": "vcs", 
            "url": "https://github.com/ksfraser/ksf-file"
        }
    ],
    "require": {
        "php": "^7.3|^8.0"
    },
    "suggest": {
        "ksfraser/frontaccounting-common": "Common FrontAccounting utilities and base classes",
        "ksfraser/ksf-file": "File handling utilities for KS Fraser packages"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpdocumentor/phpdocumentor": "^3.0",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "psr-4": {
            "Ksfraser\\Frontaccounting\\GenCat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ksfraser\\Frontaccounting\\GenCat\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "docs": "phpdoc -d src -t docs",
        "phpcs": "phpcs --standard=PSR12 src tests"
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
